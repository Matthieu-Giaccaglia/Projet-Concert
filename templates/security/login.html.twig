{% extends 'base.html.twig' %}
{% block title %}Connexion!{% endblock %}

{% block body %}

    <div style="margin: 50px auto; width: max-content">
        <div class="card" style="width: 25rem;">
            <div class="card-body">
                <h1 class="card-title">Se Connecter</h1>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <label for="_username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="_username" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="_password">Password</label>
                        <input type="password" name="_password" id="_password" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="btn btn-primary mt-2" type="submit">
                    Sign in
                    </button>
                </form>
            </div>
        </div>

        <p class="mt-2">Pas de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous !</a></p>
    </div>



{% endblock %}
