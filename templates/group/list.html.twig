{% extends 'base.html.twig' %}

{% block title %}
    Liste des groupes
{% endblock %}

{% block body %}

    <div class="title">
        <h1>Liste des groupes</h1>
        <a class="btn btn-secondary" href="{{ path('group_new') }}">Nouveau groupe</a>
    </div>

    <div class="container">
        <table class="table">
            <thead>
            <tr class="table-secondary">
                <td>Nom</td>
                <td>Description</td>
                <td>Afficher</td>
                <td>Editer</td>
                <td>Supprimer</td>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                <tr>
                    <td>
                        {{ group.name }}
                    </td>
                    <td>
                        {{ group.description }}
                    </td>
                    <td>
                        <a href="{{ path('group_show', {id: group.id}) }}" class="btn btn-primary">AFFICHER</a>
                    </td>
                    <td>
                        <a href="{{ path('group_edit', {id: group.id}) }}" class="btn btn-primary">EDITER</a>
                    </td>
                    <td>
                        <form method="post" action="{{ path('group_delete', {'id': group.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
                            <button type="submit" class="btn btn-primary">SUPPRIMER</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div>

    </div>
{% endblock %}