{% extends 'base.html.twig' %}

{% block body %}

    <div class="title">
        <h1>Liste des groupes</h1>
    </div>
    <div class="container">
        <div class="row">
        {% for group in groups %}
            <div class="col-6" style="margin: auto">
                <div class="card" style="width: 18rem; margin: auto">
                    <img src="{{ asset('img/groups/'  ~ group.imgName) }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ group.name }}</h5>
                        <p class="card-text">{{ group.description }}</p>
                        <a href="{{ path('groups_show', {id: group.id}) }}" class="btn btn-primary">En Savoir Plus..</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>

{% endblock %}
