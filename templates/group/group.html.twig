{% extends 'base.html.twig' %}

{% block body %}

    <div class="group-container" style="position: relative">
        
        <img style="position: fixed;z-index: -1; max-width: 100vw" src="{{ asset('img/groups/' ~ group.name|replace({' ':'_'})|lower ~ '/' ~ group.imgName) }}" alt="">

        <div class="group-separator"></div>

        <div class="group-title">
            <h1> {{ group.name }}</h1>
        </div>

        <div class="group-desc mt-3">
            <p> {{ group.description }}</p>
        </div>
        

        <div class="container mt-3">
            <div class="row">

                {% for artist in artists %}
                    <div class="col-6" style="margin: auto">
                        <div class="card mb-3" style="max-width: 540px;margin: auto">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img style="width: 180px; height: 240px;" src="{{ asset('img/artists/' ~ artist.imgName) }}" class="img-fluid rounded-start" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title"><a href="{{ path('artist_show', {id: artist.id}) }}">{{ artist.name }}</a></h5>
                                        <p class="card-text">{{ artist.description }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="group-separator-2"></div>

    </div>



{% endblock %}