<div class="card card-groups">

    <img src="{{ asset('img/groups/'  ~ group.imgName) }}" class="card-img-top" alt="...">

    <div class="card-body" style="height: 110px">
        <h5 class="card-title"><a href="{{ path('concert_show', {id: concert.id}) }}"> Concert de {{ group.name }} du {{ concert.datetimeBegin|date('d-m-Y') }}</a></h5>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="card-footer">
            <form method="post" action="{{ path('concert_delete', {'id': concert.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ concert.id) }}">
                <button type="submit" class="btn link-danger">SUPPRIMER</button>
            </form>
            <a href="{{ path('concert_edit', {'id': concert.id}) }}" class="btn btn-primary">EDITER</a>
        </div>

    {% endif %}
</div>